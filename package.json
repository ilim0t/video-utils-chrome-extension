{
  "name": "auto-close-video-tab",
  "version": "0.1.0",
  "description": "Chrome extension to automatically close video tabs after playback",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run clean && npm run copy-files",
    "clean": "rm -rf dist",
    "copy-files": "mkdir -p dist && cp -r src/* dist/",
    "lint": "eslint --ext .js --fix .",
    "format": "prettier --write \"src/**/*.{js,json,html}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ilim0t/video-utils-chrome-extension.git"
  },
  "author": "ilim0t",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ilim0t/video-utils-chrome-extension/issues"
  },
  "homepage": "https://github.com/ilim0t/video-utils-chrome-extension#readme",
  "devDependencies": {
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0"
  }
}
